<h1> My list </h1>

<%= @list.name %>


<ul>
<% @list.bookmarks.each do |bookmark| %>
<li> <%= bookmark.movie.title %>  -
  <%= link_to "Delete", bookmark_path(bookmark),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</li>
<% end %>

</ul>

<p><%= link_to "See all my lists", lists_path() %> </p>
<p><%= link_to "Add a bookmark", new_list_bookmark_path(@list)%> </p>
<p><%= link_to "Delete a bookmark", new_list_bookmark_path(@list)%> </p>
